---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <style>
      :root {
        --color-text: #fff;
        --color-bg: #0c1016;
      }

      html {
        font-family: system-ui, sans-serif;
        color: var(--color-text);
        background: var(--color-bg) url('/bg.svg') repeat 0 0;
      }

      body {
        margin: 0;
      }
    </style>
  </body>
</html>
