---
import Layout from '../layouts/Layout.astro';
import common from '../config/common.json';
import GitHub from '../components/github';
import Patreon from '../components/patreon';
import Button from '../components/button';
---

<Layout title={common.title}>
  <main>
    <div class='flex justify-center items-center flex-col px-4 h-full w-full'>
      <div class='py-8'>
        <h1 class='font-bold'><span>servergoblin</span>.<span>net</span></h1>
      </div>
      <a href={common.url.download} class='mb-16' download><Button /></a>
    </div>

    <Patreon />
    <GitHub />
  </main>
  <style>
    main {
      margin: auto;
      width: 100%;

      height: 100vh;

      color: #fff;
    }

    h1 {
      font-size: 4rem;
    }

    h1 span {
      color: #00d55a;
    }

    a.button {
      margin-bottom: 4.5rem;
    }

    button {
      background: #fff;
      color: var(--color-bg);
      padding: 1rem 2rem;
      border-radius: 6px;
      border: none;
      font-size: 1.2rem;
      font-weight: bold;
      cursor: pointer;
      transition: all 0.2s ease-in-out;

      text-transform: uppercase;
    }

    button:active {
      transform: translateY(-5px);
    }
  </style>
</Layout>
